
(defwidget bar[]
    (box
        (clock)
        (right)
    )
)

(defwidget centre []
    (box
        :valign "center"
        :halign "center"
        :orientation "h"
        :space-evenly false
        (clock)
    )
)

(defwidget right []
    (box
        :valign "center"
        :halign "end"
        (tray)
    )

)


(defwidget clock []
    (eventbox 
        :class "clock"
        :onclick "./scripts/togglebar.sh"
        :halign "center"
        (label 
            :class "clock hour" 
            :text {formattime(EWW_TIME, "%I:%M", "America/Edmonton")}
        )
    )
)
(defwidget tray []
    (box
        :class "tray"
        :spacing 5
        :halign "end"
        (systray :pack-direction "ttb")
    )
)