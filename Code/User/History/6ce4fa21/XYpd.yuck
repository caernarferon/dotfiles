
(defwidget bar[]
    (revealer
        :reveal true
        :transition "slideup"
        (centre)
    )
)

(defwidget centre []
    (box
        :valign "center"
        (clock)
        (tray)
    )
)

(defwidget clock []
    (eventbox 
        :class "clock"
        :onclick "./scripts/togglebar.sh"
        :halign "center"
        (label 
            :class "clock hour" 
            :text {formattime(EWW_TIME, "%I:%M", "America/Edmonton")}
        )
    )
)
(defwidget tray []
    (box
        :class "tray"
        :spacing 5
        :halign "right"
        (systray :pack-direction "ttb")))