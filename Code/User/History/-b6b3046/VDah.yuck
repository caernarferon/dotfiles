
(defwidget bar[]
    (box
    (clock)))


(defwidget clock []
    (box 
        :class "clock"
        :orientation "h"
        :spacing 5
        :halign "center"
        (label 
            :class "clock hour" 
            :text {formattime(EWW_TIME, "%I", "America/Edmonton")}
        )
        (label 
        :class "clock minute" 
        :text {formattime(EWW_TIME, "%M", "America/Edmonton")}
        )
    ))